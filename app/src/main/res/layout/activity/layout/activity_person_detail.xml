<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.discovery.PersonDetailActivity">


    <include
        android:id="@+id/include8"
        layout="@layout/toolbar_back_title" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/iv_head_width"
        android:layout_height="@dimen/iv_head_width"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="头像"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include8"
        app:srcCompat="@drawable/ic_default_image_black_24dp" />

    <TextView
        android:id="@+id/tv_buyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="@dimen/tv_name_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        app:layout_constraintStart_toEndOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_head"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>